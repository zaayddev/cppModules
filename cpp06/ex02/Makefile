CC := c++

NAME := serialisation

CFLAGS := -Wall -Wextra -Werror -std=c++98 -Wshadow

###############################################################################

SRCS := Base.cpp

OBJS := $(SRCS:%.cpp=%.o)

INC := $(SRCS:%.cpp=%.hpp) A.hpp B.hpp C.hpp

MAIN := main.cpp

###############################################################################

all : 		$(NAME)

$(NAME) :	$(OBJS) $(MAIN)
	$(CC) $(CFLAGS) $^ -o $(NAME)

%.o :		%.cpp $(INC)
	$(CC) $(CFLAGS) -c $< -o $@

###############################################################################

clean :
	$(RM) $(OBJS)

fclean : clean
	$(RM) $(NAME)

re : fclean all

###############################################################################

.PHONY : all clean fclean re
